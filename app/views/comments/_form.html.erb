<% @comment = Comment.new %>
<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@comment, :html => {class:"form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :text %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :text, class: "form-control", placeholder: "Comment", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-lg btn-xlarge'%>
                </div>
            </div>
        <% end %>
    </div>
</div>