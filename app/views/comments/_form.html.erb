<% @comment = Comment.new %>
<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@comment, :html => {class:"form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="col-sm-8">
                    <%= f.text_area :text, class: "form-control", placeholder: "Comment", autofocus: true %>
                </div>
            </div>
            <%= f.hidden_field :scenario_id, :value => @scenario.id %>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-lg btn-xlarge'%>
                </div>
            </div>
        <% end %>
    </div>
</div>