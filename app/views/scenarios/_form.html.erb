<%= render 'shared/errors', obj: @scenario %>

<div class='row'>
    <div class='col-xs-12'>
        <%= form_for(@scenario, :html => {class:"form-horizontal", role: "form"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :description %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :description, class: "form-control", placeholder: "Description", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit class: 'btn btn-lg btn-xlarge'%>
                </div>
            </div>
        <% end %>
        <div align="center">
            <%= link_to 'Return to Home Page', root_path %>
        </div>
    </div>
</div>